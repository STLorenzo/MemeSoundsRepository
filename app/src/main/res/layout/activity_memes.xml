<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/MemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient2">

        <TextView
            android:id="@+id/titleM"
            android:text="FREE MEMES"
            android:textColor="#ffff00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="@string/Next"
            android:textColor="@drawable/text_blue"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="@string/Back"
            android:textColor="@drawable/text_blue"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient3"
            android:text="Stop"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollMeme"
        android:layout_below="@id/MemeTitle"
        android:layout_above="@id/stopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:id="@+id/memesLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|fill_horizontal">
        </LinearLayout>

    </ScrollView>

</RelativeLayout>